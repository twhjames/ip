<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="helix.gui.MainWindow">
    <children>
        <ScrollPane fx:id="scrollPane" prefHeight="400.0" prefWidth="300.0">
            <content>
                <VBox fx:id="dialogContainer" prefWidth="300.0" spacing="10.0">
                    <padding>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
        <TextField fx:id="userInput" layoutY="400.0" prefHeight="30.0" prefWidth="240.0" />
        <Button fx:id="sendButton" layoutX="240.0" layoutY="400.0" mnemonicParsing="false" text="Send"
                onAction="#handleUserInput"/>
    </children>
</AnchorPane>